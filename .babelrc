  "plugins": [
    "transform-react-jsx",
    "transform-strict-mode",
    "system-import-transformer",
    [
        "babel-root-import",
        {"rootPathSuffix": "client"}
    ]
  ],
  "presets": ["react", "es2015", "stage-2"] ,
  "env": {
      "development": {
        "presets": ["react-hmre"]
      }
  },
  ignore: ["/node_modules/"]
}
